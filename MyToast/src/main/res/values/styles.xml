<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomDialogTheme2" parent="@android:style/Theme.Dialog">

        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <style name="CustomMaterialDialog" parent="@style/MaterialAlertDialog.Material3">

        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:gravity">right</item>
        <item name="layout_anchorGravity">right</item>
        <item name="android:foregroundGravity">right</item>

    </style>
    <style name="animation_scale_in_fade_out">
        <item name="android:windowEnterAnimation">@anim/scale_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
    <style name="animation_slide_left_to_right">
        <item name="android:windowEnterAnimation">@anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@anim/slide_out_right</item>
    </style>
    <style name="animation_slide_from_bottom">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>
    <style name="animation_slide_error">
        <item name="android:windowEnterAnimation">@android:anim/overshoot_interpolator</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

</resources>